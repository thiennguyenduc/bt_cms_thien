<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.giao_dien.Getting_start"
    android:background="@drawable/a"
    android:orientation="vertical" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp" >

        <Button
            android:id="@+id/btn_hdan"
            android:layout_width="76dp"
            android:layout_height="69dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/b" />

        <Button
            android:id="@+id/btn_ghichu"
            android:layout_width="59dp"
            android:layout_height="69dp"
            android:layout_marginLeft="135dp"
            android:background="@drawable/c" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Hướng dẫn nấu ăn"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="Ghi chú"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="40dp" >

        <Button
            android:id="@+id/btn_chedobeo"
            android:layout_width="76dp"
            android:layout_height="69dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/d" />

        <Button
            android:id="@+id/btn_chedogay"
            android:layout_width="45dp"
            android:layout_height="69dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/f" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Chế độ cho người béo"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:text="chế độ cho người gầy"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_home"
            android:layout_width="60dp"
            android:layout_height="59dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/e" />

    </LinearLayout>
    
       </LinearLayout> 
     <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <fragment
        android:id="@+id/navigation_drawer"
        android:name="com.example.giao_dien.NavigationDrawerFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start" />
    


</android.support.v4.widget.DrawerLayout>
