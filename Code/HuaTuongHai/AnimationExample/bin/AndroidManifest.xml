            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TweenAnimationActivity"
            android:label="@string/title_activity_tween_animation" >
            
        </activity>
        <activity
            android:name=".ViewAnimation"
            android:label="@string/title_activity_view_animation" >
            
        </activity>
        <activity
            android:name=".ViewAnimationActivity"
            android:label="@string/title_activity_view_animation" >
            
        </activity>
    </application>

</manifest>
